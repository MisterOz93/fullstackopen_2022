const removeFromArray = function(array, ...args) {  
 // args is what needs to be removed

 
const output = [...array]        
//important, this makes it a copy of the array but seperate from changes

for (i = 0; i < array.length; i++) {

if (output.includes(args[i])) {     
//Replacing output[i] to args[i] was the key to solving

output.splice(output.indexOf(args[i]),1);  
 //figure out exactly what's going on here

}

//Let's try to explain what the loop does:
// If the array includes a value found in args, it then splices out the first instance of that args value
// wow it makes sense, how did i not think of this lol. 

}


return output;